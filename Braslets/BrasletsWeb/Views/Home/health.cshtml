<script>
    (function ($) {
        $(function () {
            function addblock(name, ad1, ad2, p, date, delay) {
                $('#dynamic').prepend('<div class="h-b-2-elem"><div class="b-2-title">' + name + '</div><div class="b-2-date">' + date + '</div><div class="b-2-audi"><div class="audi-left">А/Д: <span class="bold">' + ad1 + '/' + ad2 + '</span></div><div class="audi-right">П:<span class="bold">' + p + '</span></div></div></div>').fadeIn(3000);
            }

            function removeblock(pos) {
                $('#dynamic .h-b-2-elem:eq(' + pos + ')').hide();
            }

            function randomInteger(min, max) {
                var rand = min - 0.5 + Math.random() * (max - min + 1)
                rand = Math.round(rand);
                return rand;
            }


            setTimeout(function () {
                addblock('Миххев А.И.', '120', '60', '80', '12:12:2018 09:00');
            }, 3000); // время в мс

            setTimeout(function () {
                addblock('Назарбаев Д.И.', '140', '65', '100', '11:12:2018 08:00');
            }, 9000); // время в мс


            setTimeout(function () {
                removeblock(randomInteger(0, 6));
            }, 6000); // время в мс


            setTimeout(function () {
                removeblock(randomInteger(0, 6));
            }, 12000); // время в мс

            setTimeout(function () {
                removeblock(randomInteger(0, 6));
            }, 15000); // время в мс

        });
    })(jQuery);
</script>
