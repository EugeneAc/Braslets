@model BrasletsWeb.Models.HomeModel
@{
    ViewBag.Title = "ГЛАВНАЯ/АНАЛИТИКА";
    var alarms = Model.Braslets.SelectMany(s=>s.Alarms);
}
<div class="grid-big">
    <div class="trevogi">
        <div class="trevogi-title">Тревоги  и оповещения</div>
        <table class="trevogi-table">
            <tr class="trevogi-table-head">
                <td>Время обнаружения</td>
                <td>ФИО</td>
                <td>Тип события</td>
            </tr>
            <tbody>
                @foreach (var alarm in alarms.OrderByDescending(t => t.ExceptionTime).Take(6))
                {

                    <tr>
                        <td>@alarm.LocatingTime.ToLocalTime()</td>
                        <td>@alarm.DeviceName</td>
                        <td>@alarm.ExceptionType</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="trevogi-title" style="margin-top: 15px;">Биометрика</div>
        <table class="trevogi-table">
            <tr class="trevogi-table-head">
                <td>ФИО</td>
                <td>Шаги</td>
                <td>Пульс</td>
                <td>Давление</td>
            </tr>
            <tbody>
                @foreach (var braslet in Model.Braslets)
                {
                <tr>
                    <td>@braslet.Person.Nickname</td>
                    <td>@braslet.Person.Steps</td>
                    <td>@braslet.Person.Heartbeat</td>
                    <td>@braslet.Person.Diastolic/@braslet.Person.Shrink</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
